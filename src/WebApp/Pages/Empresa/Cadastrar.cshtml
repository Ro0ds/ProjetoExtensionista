@page
@model WebApp.Pages.Empresa.CadastrarModel

@{
	ViewData["Title"] = "Cadastro de Empresa";
	Layout = "_CadastroLayout";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10 col-xl-8">
            <!-- Header -->
            <div class="text-center mb-5">
                <h1 class="display-5 fw-bold mb-3">Cadastrar Nova Empresa</h1>
                <p class="lead text-muted">Preencha todos os campos obrigatórios</p>
            </div>

            <!-- Success Message -->
            @if(Model.ShowSuccessMessage)
            {
                <div class="alert alert-success alert-dismissible fade show d-flex align-items-center mb-4" role="alert">
                    <i class="bi bi-check-circle-fill me-3 fs-3"></i>
                    <div class="flex-grow-1">
                        <strong>Sucesso!</strong> Cadastro realizado. Redirecionando...
                    </div>
                    <div class="spinner-border spinner-border-sm ms-3" role="status">
                        <span class="visually-hidden">Carregando...</span>
                    </div>
                    <button type="button" class="btn-close ms-3" data-bs-dismiss="alert"></button>
                </div>

                <script>
                    setTimeout(function() {
                        window.location.href = '@Url.Page("/Admin/Administrativo")';
                    }, 3000);
                </script>
            }

            <!-- Form Card -->
            <div class="card shadow-lg border-0">
                <div class="card-body p-5">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4"></div>

                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <div class="form-floating">
                                    <input asp-for="Requisicao.NomeFantasia" class="form-control form-control-lg @(ViewData.ModelState["Requisicao.NomeFantasia"]?.Errors.Any() == true ? "is-invalid" : "")" />
                                    <label asp-for="Requisicao.NomeFantasia"></label>
                                    <div asp-validation-for="Requisicao.NomeFantasia" class="invalid-feedback"></div>
                                </div>
                            </div>
                            <div class="col-md-6 mb-4">
                                <div class="form-floating">
                                    <input asp-for="Requisicao.RazaoSocial" class="form-control form-control-lg @(ViewData.ModelState["Requisicao.RazaoSocial"]?.Errors.Any() == true ? "is-invalid" : "")" />
                                    <label asp-for="Requisicao.RazaoSocial"></label>
                                    <div asp-validation-for="Requisicao.RazaoSocial" class="invalid-feedback"></div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <div class="form-floating">
                                    <input asp-for="Requisicao.CNPJ" class="form-control form-control-lg @(ViewData.ModelState["Requisicao.CNPJ"]?.Errors.Any() == true ? "is-invalid" : "")" />
                                    <label asp-for="Requisicao.CNPJ"></label>
                                    <div asp-validation-for="Requisicao.CNPJ" class="invalid-feedback"></div>
                                </div>
                            </div>
                            <div class="col-md-6 mb-4">
                                <div class="form-floating">
                                    <input asp-for="Requisicao.Telefone" class="form-control form-control-lg @(ViewData.ModelState["Requisicao.Telefone"]?.Errors.Any() == true ? "is-invalid" : "")" />
                                    <label asp-for="Requisicao.Telefone"></label>
                                    <div asp-validation-for="Requisicao.Telefone" class="invalid-feedback"></div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <div class="form-floating">
                                    <input asp-for="Requisicao.Email" class="form-control form-control-lg @(ViewData.ModelState["Requisicao.Email"]?.Errors.Any() == true ? "is-invalid" : "")" />
                                    <label asp-for="Requisicao.Email"></label>
                                    <div asp-validation-for="Requisicao.Email" class="invalid-feedback"></div>
                                </div>
                            </div>
                            <div class="col-md-6 mb-4">
                                <div class="form-floating">
                                    <input asp-for="Requisicao.DataCriacaoEmpresa" type="date" class="form-control form-control-lg @(ViewData.ModelState["Requisicao.DataCriacaoEmpresa"]?.Errors.Any() == true ? "is-invalid" : "")" />
                                    <label asp-for="Requisicao.DataCriacaoEmpresa"></label>
                                    <div asp-validation-for="Requisicao.DataCriacaoEmpresa" class="invalid-feedback"></div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div>
                                <div class="form-floating">
                                    <input asp-for="Requisicao.DataCriacaoCadastro" type="date" class="form-control form-control-lg @(ViewData.ModelState["Requisicao.DataCriacaoCadastro"]?.Errors.Any() == true ? "is-invalid" : "")" />
                                    <label asp-for="Requisicao.DataCriacaoCadastro"></label>
                                    <div asp-validation-for="Requisicao.DataCriacaoCadastro" class="invalid-feedback"></div>
                                </div>
                            </div>
                            <div class="col-md-6 mb-4">
                                <div class="form-floating">
                                    <input asp-for="Requisicao.EmpresaAtiva" value="true" hidden />
                                </div>
                            </div>
                        </div>

                        <h5 class="fw-bold mb-4 pb-2 border-bottom">
                            <i class="bi bi-geo-alt me-2 text-primary"></i>Endereço
                        </h5>

                        <div class="row">
                            <div class="col-md-4 mb-4">
                                <div class="form-floating">
                                    <input asp-for="Requisicao.Endereco.CEP" class="form-control form-control-lg" />
                                    <label asp-for="Requisicao.Endereco.CEP">CEP</label>
                                </div>
                            </div>
                            <div class="col-md-4 mb-4">
                                <div class="form-floating">
                                    <input asp-for="Requisicao.Endereco.RUA" class="form-control form-control-lg" />
                                    <label asp-for="Requisicao.Endereco.RUA">Rua</label>
                                </div>
                            </div>
                            <div class="col-md-4 mb-4">
                                <div class="form-floating">
                                    <input asp-for="Requisicao.Endereco.NUMERO" class="form-control form-control-lg" />
                                    <label asp-for="Requisicao.Endereco.NUMERO">Número</label>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-4">
                                <div class="form-floating">
                                    <input asp-for="Requisicao.Endereco.BAIRRO" class="form-control form-control-lg" />
                                    <label asp-for="Requisicao.Endereco.BAIRRO">Bairro</label>
                                </div>
                            </div>
                            <div class="col-md-4 mb-4">
                                <div class="form-floating">
                                    <input asp-for="Requisicao.Endereco.CIDADE" class="form-control form-control-lg" />
                                    <label asp-for="Requisicao.Endereco.CIDADE">Cidade</label>
                                </div>
                            </div>
                            <div class="col-md-2 mb-4">
                                <div class="form-floating">
                                    <input asp-for="Requisicao.Endereco.ESTADO" maxlength="2" class="form-control form-control-lg text-uppercase" />
                                    <label asp-for="Requisicao.Endereco.ESTADO">UF</label>
                                </div>
                            </div>
                            <div class="col-md-2 mb-4">
                                <div class="form-floating">
                                    <input asp-for="Requisicao.Endereco.PAIS" class="form-control form-control-lg" />
                                    <label asp-for="Requisicao.Endereco.PAIS">País</label>
                                </div>
                            </div>
                        </div>

                        <!-- Botões -->
                        <div class="d-grid gap-3 d-md-flex justify-content-md-between mt-5 pt-4 border-top">
                            <a asp-page="/Admin/Administrativo" class="btn btn-outline-secondary btn-lg px-4">
                                <i class="bi bi-arrow-left me-2"></i>Voltar
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg px-5">
                                <i class="bi bi-check-lg me-2"></i>Cadastrar Empresa
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}