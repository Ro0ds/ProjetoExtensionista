@using Common.Enums
@inject WebApp.Interfaces.ITokenService TokenService

@{
    var token = TokenService.PegarToken();
    var dados = token != null ? WebApp.JWT.TokenConfig.DecodificarToken(token) : null;
    var isLoggedIn = !string.IsNullOrEmpty(token);
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - InovarJunto</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/css/global.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css" />
</head>
<body class="bg-light">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-lg">
            <div class="container">
                <a class="navbar-brand fw-bold fs-4" asp-page="/Principal">
                    <i class="bi bi-box-seam-fill me-2"></i>
                    Inovar<span class="text-warning">Junto</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["page"]?.ToString() == "Principal" ? "active fw-bold" : "")"
                               asp-page="/Principal">
                                <i class="bi bi-house-door me-1"></i>Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["page"]?.ToString() == "Produtos" ? "active fw-bold" : "")"
                               asp-page="/Produtos">
                                <i class="bi bi-list-ul me-1"></i>Estoque
                            </a>
                        </li>
                        @if(isLoggedIn && dados?.Permissao == "1")
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Admin/Administrativo">
                                    <i class="bi bi-gear me-1"></i>Admin
                                </a>
                            </li>
                        }
                    </ul>
                    <ul class="navbar-nav">
                        @if(isLoggedIn)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle d-flex align-items-center p-2" href="#"
                                   role="button" data-bs-toggle="dropdown" data-bs-auto-close="outside">
                                    <i class="bi bi-person-circle fs-5 me-2"></i>
                                    @if(!string.IsNullOrEmpty(ViewData["UsuarioNome"]?.ToString()))
                                    {
                                        @ViewData["UsuarioNome"]
                                    }
                                    else
                                    {
                                        <span class="fw-medium">Usuário</span>
                                    }
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end shadow">
                                    <li>
                                        <span class="dropdown-item-text text-center border-bottom pb-2 mb-2">
                                            <i class="bi bi-person-badge text-primary"></i><br>
                                            <small>@ViewData["UsuarioNome"]</small>
                                        </span>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-page="/Principal" asp-page-handler="Logout" method="post" class="px-2">
                                            <button type="submit" class="dropdown-item">
                                                <i class="bi bi-box-arrow-right me-2"></i>Sair
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="btn btn-outline-light ms-2" asp-page="/Account/Login">
                                    <i class="bi bi-box-arrow-in-right me-1"></i>Entrar
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid py-4 min-vh-100">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-dark text-light py-5 mt-auto">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 mb-4">
                    <h5 class="fw-bold mb-3">
                        <i class="bi bi-building text-primary me-2"></i>
                        InovarJunto
                    </h5>
                    <p class="small text-muted">
                        Sistema completo de controle de estoque multi-empresa.<br>
                        <strong>Rodrigo Gabriel e José Fábio</strong> - Atividade Extensionista UNINTER 2026
                    </p>
                </div>

                <div class="col-lg-4 mb-4">
                    <h6 class="fw-bold mb-3">Navegação</h6>
                    <ul class="list-unstyled small">
                        <li><a href="/" class="text-light text-decoration-none">Dashboard</a></li>
                        <li><a asp-page="/Produtos" class="text-light text-decoration-none">Estoque</a></li>
                        @if(isLoggedIn && dados?.Permissao == "1")
                        {
                            <li><a asp-page="/Admin/Administrativo" class="text-light text-decoration-none">Admin</a></li>
                        }
                    </ul>
                </div>

                <div class="col-lg-4 mb-4">
                    <h6 class="fw-bold mb-3">Contato</h6>
                    <p class="small mb-2">
                        <i class="bi bi-envelope me-2"></i>
                        rodrigo@inovarjunto.com
                    </p>
                    <p class="small mb-2">
                        <i class="bi bi-envelope me-2"></i>
                        fabio@inovarjunto.com
                    </p>
                    <p class="small mb-0">
                        <i class="bi bi-github me-2"></i>
                        github.com/Ro0ds/ProjetoExtensionista
                    </p>
                </div>
            </div>
            <hr class="my-4 opacity-25">
            <div class="text-center small text-muted">
                © @DateTime.Now.Year InovarJunto.
                Feito para UNINTER.
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
