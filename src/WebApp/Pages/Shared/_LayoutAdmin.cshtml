<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - InovarJunto Admin</title>
    <link rel="stylesheet" href="~/css/global.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/zephyr/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css" />
</head>
<body class="d-flex">

    <div class="flex-grow-1 d-flex flex-column">
        <nav class="navbar navbar-expand navbar-light bg-white shadow-sm border-bottom">
            <div class="container-fluid px-4">
                <button class="btn btn-link d-md-none" type="button" id="sidebarToggle">
                    <i class="bi bi-list"></i>
                </button>

                <h4 class="navbar-brand mb-0 fw-bold text-primary">@ViewData["Title"]</h4>

                <ul class="navbar-nav ms-auto">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle d-flex align-items-center" href="#"
                           role="button" data-bs-toggle="dropdown">
                            <img src="" class="rounded-circle me-2" width="32" height="32" alt="Avatar">
                            @ViewData["UsuarioNome"]
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end shadow">
                            <li>
                                <span class="dropdown-item-text px-3 py-2">
                                    <small>@ViewData["UsuarioNome"]</small>
                                </span>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <form asp-page="/Principal" asp-page-handler="Logout" method="post" class="px-2">
                                    <button type="submit" class="dropdown-item">
                                        <i class="bi bi-box-arrow-right me-2"></i>Sair
                                    </button>
                                </form>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </nav>

        <main class="flex-grow-1 p-4 bg-light">
            <div class="container-fluid">
                @RenderBody()
            </div>
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.getElementById('sidebarToggle')?.addEventListener('click', function() {
            document.querySelector('.sidebar').classList.toggle('collapsed');
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
