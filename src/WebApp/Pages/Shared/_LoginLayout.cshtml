<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - InovarJunto</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/zephyr/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/global.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100">
    <div class="bg-primary text-white py-5 flex-grow-1 d-flex align-items-center">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6 mb-4 mb-lg-0">
                    <div class="display-4 fw-bold mb-3">
                        <i class="bi bi-box-seam-fill me-3"></i>
                        InovarJunto
                    </div>
                    <h2 class="fw-normal mb-4">Sistema de Controle de Estoque</h2>
                    <p class="lead mb-0">
                        Gerencie seu estoque com segurança e eficiência.
                        Multi-empresa, dashboards e controle total.
                    </p>
                </div>

                <div class="col-lg-6">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
    <footer class="bg-dark text-light py-4">
        <div class="container text-center small">
            © @DateTime.Now.Year InovarJunto - UNINTER Extensionista
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
