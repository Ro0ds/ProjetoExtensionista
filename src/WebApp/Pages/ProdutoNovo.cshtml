@page
@model ProdutoNovoModel
@{
    ViewData["Title"] = "Novo Produto";
}

<div class="py-4">
    <!-- Header Simples -->
    <div class="d-flex justify-content-between align-items-center mb-4 pb-3">
        <div>
            <a asp-page="/Produtos" class="btn btn-outline-secondary me-3 mb-2 mb-md-0">
                <i class="bi bi-arrow-left"></i>
            </a>
            <h2 class="mb-1 fw-bold d-inline-block">Novo Produto</h2>
        </div>
    </div>

    <!-- Form Card -->
    <div class="row justify-content-center">
        <div class="col-lg-9 col-xl-8">
            <div class="card shadow border-0">
                <div class="card-body p-4 p-lg-5">
                    <form method="post">
                        @if(!ModelState.IsValid)
                        {
                            <div class="alert alert-danger mb-4 border-0">
                                <i class="bi bi-exclamation-triangle me-2"></i>Corrija os campos abaixo.
                            </div>
                        }

                        <!-- Nome + Preço -->
                        <div class="row g-4 mb-4">
                            <div class="col-md-8">
                                <div class="form-floating">
                                    <input asp-for="Produto.Nome" class="form-control" placeholder="Nome do produto" />
                                    <label asp-for="Produto.Nome">Nome *</label>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-floating">
                                    <input asp-for="Produto.Preco" type="number" step="0.01" min="0" class="form-control" placeholder="0.00" />
                                    <label asp-for="Produto.Preco">Preço (R$) *</label>
                                </div>
                            </div>
                        </div>

                        <!-- Descrição -->
                        <div class="mb-4">
                            <label class="form-label fw-semibold mb-2">Descrição</label>
                            <textarea asp-for="Produto.Descricao" class="form-control" rows="3"
                                      placeholder="Descreva o produto..."></textarea>
                        </div>

                        <!-- Empresa + Categoria -->
                        <div class="row g-4 mb-5">
                            <div class="col-md-6 mb-4">
                                <label class="form-label fw-semibold">
                                    <i class="bi bi-building me-1 text-primary"></i>Empresa *
                                </label>
                                <select asp-for="Produto.EmpresaId" class="form-select form-select-lg" required>
                                    <option value="">Selecione...</option>
                                    @foreach(var emp in Model.Empresas)
                                    {
                                        <option value="@emp.Id">@emp.NomeFantasia</option>
                                    }
                                </select>
                                <div class="form-text">Escolha a empresa deste produto</div>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-semibold">Categoria</label>
                                <select asp-for="Produto.CategoriaId" class="form-select">
                                    <option value="1">Geral</option>
                                    <option value="2">Eletrônicos</option>
                                    <option value="3">Roupas</option>
                                    <option value="4">Alimentos</option>
                                </select>
                            </div>
                        </div>

                        <!-- Botões -->
                        <div class="d-flex gap-3">
                            <button type="submit" class="btn btn-success px-5">
                                <i class="bi bi-check me-2"></i>Salvar
                            </button>
                            <a asp-page="/Produtos" class="btn btn-outline-secondary px-5">
                                <i class="bi bi-arrow-left me-2"></i>Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
