@page
@model ProdutoNovoModel

<h3>Novo Produto</h3>

<form method="post">
	<div class="mb-3">
		<label class="form-label">Nome</label>
		<input asp-for="Produto.Nome" class="form-control" />
		<span asp-validation-for="Produto.Nome" class="text-danger"></span>
	</div>

	<div class="mb-3">
		<label class="form-label">Descrição</label>
		<input asp-for="Produto.Descricao" class="form-control" />
		<span asp-validation-for="Produto.Descricao" class="text-danger"></span>
	</div>

	<div class="mb-3">
		<label class="form-label">Preço</label>
		<input asp-for="Produto.Preco" class="form-control" />
		<span asp-validation-for="Produto.Preco" class="text-danger"></span>
	</div>

	<div class="mb-3">
		<label class="form-label">EmpresaId (temporario)</label>
		<input asp-for="Produto.EmpresaId" class="form-control" />
		<span asp-validation-for="Produto.EmpresaId" class="text-danger"></span>
	</div>

	<div class="mb-3">
		<label class="form-label">CategoriaId (temporario)</label>
		<input asp-for="Produto.CategoriaId" class="form-control" />
		<span asp-validation-for="Produto.CategoriaId" class="text-danger"></span>
	</div>

	<button type="submit" class="btn btn-primary">Salvar</button>
	<a asp-page="/Produtos" class="btn btn-secondary ms-2">Voltar</a>
</form>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}